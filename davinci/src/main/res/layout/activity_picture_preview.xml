<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PicturePreviewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_preview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="123"
        app:navigationIcon="@drawable/back">

        <TextView
            android:id="@+id/id_preview_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:text="发送"
            android:textSize="16sp"
            android:textColor="#1E268A" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_preview_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_preview_toolbar"
        android:layout_above="@id/id_preview_recyclerView"
        android:background="#fff"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_preview_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:layout_above="@id/id_preview_bottom_relativeLayout"/>

    <RelativeLayout
        android:id="@+id/id_preview_bottom_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3F51B5"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:background="#fff"
                android:layout_gravity="center"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/id_bottom_preview_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="-220dp"
            android:checked="true"
            android:layout_toStartOf="@+id/id_bottom_preview_selection" />

        <TextView
            android:id="@+id/id_bottom_preview_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:text="选择" />
    </RelativeLayout>
</RelativeLayout>